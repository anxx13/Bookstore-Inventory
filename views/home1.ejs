<html>
<head>
  <meta charset="utf-8">
  
  <title>Booktopia</title>
  <!-- Tell the browser to be responsive to screen width -->
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="plugins/fontawesome-free/css/all.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="dist/css/adminlte.min.css">
  <!-- Google Font: Source Sans Pro -->
  <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
  <style>
    .navbar-custom {
            background-color:rosybrown;
    }          
  </style>
 
</head>
<body class="sidebar-mini sidebar-collapse" style="height: auto;">
	
	<div class="wrapper">
		
		<!-- Navbar -->
		<nav class="main-header navbar navbar-expand bg-success navbar-white navbar-light">
		<!-- Left navbar links -->
			<ul class="navbar-nav">
				<li class="nav-item">
				<a class="nav-link" data-widget="pushmenu" href="#" role="button"> 
                                           <i class="fas fa-bars"></i></a>
				</li>
				<li class="nav-item d-none d-sm-inline-block">
				<a href="/" class="nav-link">Home</a>
				</li>
			</ul>
		</nav>
		<!-- /.navbar -->
		
		<aside class="main-sidebar sidebar-dark-primary elevation-4">
		<!-- Brand Logo -->
			<a href="/" class="brand-link">
			  <img src="logo.jpg"
				   class="brand-image img-circle" style="opacity: .8">
			  <span class="brand-text font-weight-200">Inventory Menu</span>
			</a>
			<!-- Sidebar Menu -->
            <div class="sidebar">
                <nav class="mt-2" >
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <li class="nav-item">
                        <a href="/create" class="nav-link">
                        <i class="nav-icon far fa-circle" style="color: white"></i>
                        <p>Add Product</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/updatestock" class="nav-link">
                        <i class="nav-icon far fa-circle" style="color: white"></i>
                        <p class="text">Update Stock</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/updateprice" class="nav-link">
                        <i class="nav-icon far fa-circle" style="color: white"></i></i>
                        <p class="text">Update Price</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/delete" class="nav-link">
                        <i class="nav-icon far fa-circle" style="color: white"></i>
                        <p class="text">Delete Product</p>
                        </a>
                    </li>
    
                    </ul>
                </nav>
          </div>
            <!-- /.sidebar-menu -->
		</aside>
		<!-- Content Wrapper. Contains page content -->
		<div class="content-wrapper">
			<section class="content-header">
				<h1>Stock Details</h1>
			</section>
			
			<section class="content">
				<div class="card">
                    <div class="card-header">
            
                      
                      <div class="card-body table-responsive p-0" style="height:auto;">
                        <table class="table table-striped table-head-fixed text-nowrap">
                        <thead>
                            <tr>
                                <th style="width: 10%" >Product ID</th>
                                <th style="width: 20%" >Book</th>
                                <th style="width: 20%" >Author</th>
                                <th style="width: 10%" >Price</th>
                                <th style="width: 10%" >Stock</th>
                                <th style="width: 20%" ></th>
                                <th style="width: 10%" ></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(var i=0;i<data.length;i++){ %>
                            <tr>
                            <td><%= data[i].pid %></td>
                            <td><%= data[i].name %></td>
                            <td><%= data[i].author %></td>
                            <td><%= data[i].price %></td>
                            <td><%= data[i].stock %></td>
                            <td>
                                <div class="progress progress-xs">
                                  <div class="progress-bar" style="width:20%"></div>
                                </div>
                                <small><%= data[i].stock %></small>
                            </td>
                            <td class="project-actions text-right">
                                <a class="btn btn-danger btn-sm" href="/deletebutton?pid=<%= data[i].pid %>" onclick="return confirm('Are you sure to delete?')" ><i class="fas fa-trash"></i>Delete</a>
                            </td>
                            </tr>
                            <% } %>
                            
                        </tbody>
                        </table>
                    </div>
                    
                </div>
			</section>
		</div>
        


       
	</div>
<!-- jQuery -->
<script src="../../plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="../../dist/js/adminlte.min.js"></script>
<!-- AdminLTE for demo purposes -->
<script src="../../dist/js/demo.js"></script>     
</body>
</html>